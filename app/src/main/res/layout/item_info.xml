<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/grbg2"
    tools:context=".Weather">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        android:paddingTop="8dp">
        <TextView
            android:id="@+id/textViewitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="City"
            android:textColor="#2874A6 "
            android:textSize="35sp" />

        <ImageView
            android:id="@+id/imageviewitem"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/cloudy_sunny" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/textViewTempItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Temperature"
                android:textColor="#2874A6  "
                android:textSize="35sp" />



            <TextView
                android:id="@+id/textViewWeathConditionitem"
                android:layout_width="wrap_content"
                android:textColor="#283747 "
                android:textSize="21sp"
                android:layout_height="wrap_content"
                android:text="Description"/>

        </LinearLayout>
</LinearLayout>
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:layout_marginTop="13dp"
android:orientation="horizontal">
<androidx.cardview.widget.CardView
    android:layout_width="0dp"

    android:layout_height="120dp"
    android:layout_weight="1"
    android:backgroundTint="#AF7AC5 "
    app:cardCornerRadius="8dp"
    android:layout_margin="5dp"
    app:cardElevation="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:gravity="center"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#FFF"
            android:text="MaxTemp"
            android:textSize="15sp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_thermostat_24"
            android:layout_gravity="center"/>


        <TextView
            android:id="@+id/maxTempitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:layout_width="0dp"
    android:layout_height="120dp"
    android:layout_weight="1"
    android:backgroundTint="#AF7AC5 "
    app:cardCornerRadius="8dp"
    android:layout_margin="5dp"
    app:cardElevation="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="1"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#FFF"
            android:text="MinTemp"
            android:textSize="15sp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_thermostat_24red"
            android:layout_gravity="center"/>


        <TextView
            android:id="@+id/minTempitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
<androidx.cardview.widget.CardView
    android:layout_width="0dp"
    android:layout_height="120dp"

    android:backgroundTint="#AF7AC5  "
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    android:layout_weight="1"
    app:cardElevation="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="1"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#FFF"
            android:text="Wind"
            android:textSize="15sp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/wind"
            android:layout_gravity="center"/>


        <TextView
            android:id="@+id/winditem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">
<androidx.cardview.widget.CardView
    android:layout_width="0dp"
    android:layout_height="120dp"
    android:layout_weight="1"
    android:backgroundTint="#AF7AC5 "
    app:cardCornerRadius="8dp"
    android:layout_margin="5dp"
    app:cardElevation="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="12dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:text="Humidity"
            android:textColor="#FFF"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/humidity"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/humidityitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
<androidx.cardview.widget.CardView
    android:layout_width="0dp"
    android:layout_height="120dp"
    android:backgroundTint="#AF7AC5"
    app:cardCornerRadius="8dp"
    android:layout_weight="1"
    android:layout_margin="5dp"
    app:cardElevation="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="12dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textColor="#FFF"
            android:text="Pressure"
            android:textSize="15sp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/baseline_dew_point_24"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/pressureitem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:textAlignment="center"

            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="8dp"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:elevation="4dp"
        android:layout_weight="1"
        android:backgroundTint="#AF7AC5 ">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Rain"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:src="@drawable/rain" />


            <TextView
                android:id="@+id/rain2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
</LinearLayout>


